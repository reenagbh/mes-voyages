{% extends "baseadmin.html.twig" %}

{% block title %}Gestion des environnements{% endblock %}

{% block body %}
    
    <h1>Gestion des environnements</h1>

    <form class="form-inline mt-1" method="POST" action="{{ path('admin.environnement.ajout') }}">
        <div class="form-group mr-1 mb-2">
            <input type="text" class="sm" name="nom">
            <button type="submit" class="btn btn-primary mb-2 btn-sm">Ajouter</button>
        </div>
    </form>
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for environnement in environnements %}
            <tr>
                <td>{{ environnement.nom }}</td>
                <td>
                    <a href="{{ path('admin.environnement.suppr', {id: environnement.id}) }}"
                       class="btn btn-danger"
                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer {{ environnement.nom }} ?');">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
    
